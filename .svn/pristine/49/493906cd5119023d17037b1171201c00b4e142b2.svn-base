<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <ui:composition>

        <p:dialog id="PostEditDlg" widgetVar="PostEditDialog" modal="true" resizable="false" appendTo="@(body)" header="#{msgs_EN.EditPostTitle}">
            <h:form id="PostEditForm">
                <h:panelGroup id="display">
                    <p:panelGrid columns="2" rendered="#{postController.selected != null}">
                        <p:outputLabel value="#{msgs_EN.EditPostLabel_id}" for="id" />
                        <p:inputText id="id" value="#{postController.selected.id}" title="#{msgs_EN.EditPostTitle_id}" required="true" requiredMessage="#{msgs_EN.EditPostRequiredMessage_id}"/>
                        <p:outputLabel value="#{msgs_EN.EditPostLabel_title}" for="title" />
                        <p:inputText id="title" value="#{postController.selected.title}" title="#{msgs_EN.EditPostTitle_title}" required="true" requiredMessage="#{msgs_EN.EditPostRequiredMessage_title}"/>
                        <p:outputLabel value="#{msgs_EN.EditPostLabel_content}" for="content" />
                        <p:inputText id="content" value="#{postController.selected.content}" title="#{msgs_EN.EditPostTitle_content}" required="true" requiredMessage="#{msgs_EN.EditPostRequiredMessage_content}"/>
                        <p:outputLabel value="#{msgs_EN.EditPostLabel_date}" for="date" />
                        <p:calendar id="date" pattern="dd/MM/yyyy HH:mm:ss" value="#{postController.selected.postDate}" title="#{msgs_EN.EditPostTitle_date}"  showOn="button"/>
                        <p:outputLabel value="#{msgs_EN.EditPostLabel_usersId}" for="usersId" />
                        <p:selectOneMenu id="usersId" value="#{postController.selected.usersId}" required="true" requiredMessage="#{msgs_EN.EditPostRequiredMessage_usersId}">
                            <f:selectItem itemLabel="#{msgs_EN.SelectOneMessage}"/>
                            <f:selectItems value="#{userController.itemsAvailableSelectOne}"
                                           var="usersIdItem"
                                           itemValue="#{usersIdItem}"/>
                        </p:selectOneMenu>
                    </p:panelGrid>
                    <p:commandButton actionListener="#{postController.update}" value="#{msgs_EN.Save}" update="display,:PostListForm:datalist,:growl" oncomplete="handleSubmit(args, 'PostEditDialog');"/>
                    <p:commandButton value="#{msgs_EN.Cancel}" onclick="PostEditDialog.hide()"/>
                </h:panelGroup>
            </h:form>
        </p:dialog>

    </ui:composition>
</html>
